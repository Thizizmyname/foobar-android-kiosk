<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/purchase_cash_btn"
            style="@style/SelectablePurchaseButtonStyle"
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/cash_image_id"
                android:src="@drawable/cash_purchase_button"
                android:layout_marginTop="150dp"
                android:layout_height="100dp"
                android:layout_width="100dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:text="@string/cash"/>
        </LinearLayout>

        <Button
            android:id="@+id/purchase_foocash_btn"
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/foocash"
            android:drawableTop="@drawable/foocash_purchase_button"
            android:backgroundTint="@color/purchase_button_tint"/>

        <Button
            android:id="@+id/purchase_credit_btn"
            android:layout_width="300dp"
            android:layout_height="420dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:text="@string/credit_debit_card"
            android:drawableTop="@drawable/credit_purchase_button"
            android:backgroundTint="@color/purchase_button_tint"/>

    </LinearLayout>

    <Button
        android:id="@+id/purchase_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/cancel_purchase"
        android:backgroundTint="@color/red_abort"
        />
</LinearLayout>