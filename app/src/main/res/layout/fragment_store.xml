<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nu.datavetenskap.foobarkiosk.fragments.StoreFragment"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/store_debug_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"
        android:elevation="4dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_get_products"
            android:text="Get product list"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_send_state"
            android:text="send fake state"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_get_card"
            android:text="swipe a card"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_get_random"
            android:text="Random Product"/>

    </LinearLayout>


    <fragment
        android:id="@+id/store_sidebar"
        android:name="nu.datavetenskap.foobarkiosk.fragments.CartFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/store_teller_bar"
        app:layout_constraintTop_toBottomOf="@id/store_debug_buttons"
        tools:layout="@layout/fragment_cart_list" />

    <fragment
        android:id="@+id/store_teller_bar"
        android:name="nu.datavetenskap.foobarkiosk.fragments.TellerFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/store_sidebar"
        app:layout_constraintTop_toBottomOf="@id/store_debug_buttons"
        tools:layout="@layout/fragment_teller" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/store_teller_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/store_teller_bar"
        android:columnWidth="236dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:padding="10dp"
        android:background="@color/white_pressed"
        />


</android.support.constraint.ConstraintLayout>
