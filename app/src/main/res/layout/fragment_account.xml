<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nu.datavetenskap.foobarkiosk.fragments.AccountFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="2dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/account_profile"
            android:layout_width="@dimen/account_fragment_size"
            android:layout_height="@dimen/account_fragment_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#1c1c1c"
            android:src="@drawable/ic_person_white_24dp" />
        <TextView
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/account_fragment_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/account_profile"
            android:textSize="@dimen/account_text_size"
            android:gravity="left|center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/account_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/account_fragment_size"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/account_name"
            android:textColor="@color/white"
            android:textSize="@dimen/account_text_size"
            android:gravity="left|center"
            android:text="Balance:"/>
        <TextView
            android:id="@+id/account_balance"
            android:layout_width="0dp"
            android:layout_height="@dimen/account_fragment_size"
            android:layout_toRightOf="@id/account_balance_text"
            android:layout_below="@id/account_profile"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/account_text_size"
            android:gravity="right|center"
            android:textColor="@color/white"/>

    </RelativeLayout>

</FrameLayout>
